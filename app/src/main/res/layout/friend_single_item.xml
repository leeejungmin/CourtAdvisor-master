<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_friend_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/userprofile" />

    <TextView
        android:id="@+id/item_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/item_friend_status"
        android:layout_alignStart="@+id/item_friend_status"
        android:layout_alignTop="@+id/item_friend_image"
        android:hint="@string/display_name"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_friend_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/item_friend_image"
        android:layout_below="@+id/item_friend_name"
        android:hint="@string/default_status"
        android:textColor="@color/colorGrey"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/user_single_online_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_friend_name"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/item_friend_name"
        android:layout_toRightOf="@+id/item_friend_name"
        android:visibility="invisible"
        app:srcCompat="@drawable/online_circle" />

</RelativeLayout>